---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Connexion - Dashboard Syst√®me Viral</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
            rel="stylesheet"
        />

        <style>
            :root {
                --bg: #000000;
                --bg-card: #0a0a0a;
                --bg-elevated: #111111;
                --text: #ffffff;
                --text-secondary: #bfbfbf;
                --text-muted: #4b4b4b;
                --accent: #00dc82;
                --accent-bright: #00f58e;
                --accent-glow: #00ff94;
                --border: rgba(255, 255, 255, 0.06);
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: "Inter", system-ui, -apple-system, sans-serif;
                background: var(--bg);
                color: var(--text);
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 20px;
                position: relative;
                overflow: hidden;
            }

            /* Background gradient anim√© */
            .gradient-bg {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(
                    ellipse at top,
                    rgba(0, 220, 130, 0.15) 0%,
                    transparent 50%
                );
                z-index: 0;
                animation: pulse 8s ease-in-out infinite;
            }

            @keyframes pulse {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0.7;
                }
            }

            .container {
                position: relative;
                z-index: 1;
                max-width: 480px;
                width: 100%;
            }

            .card {
                background: linear-gradient(
                    135deg,
                    var(--bg-card) 0%,
                    var(--bg-elevated) 100%
                );
                padding: 48px;
                border-radius: 24px;
                border: 1px solid var(--border);
                box-shadow: 0 20px 60px rgba(0, 220, 130, 0.1);
                text-align: center;
            }

            .logo {
                font-size: 3rem;
                margin-bottom: 16px;
            }

            h1 {
                font-size: 2rem;
                font-weight: 900;
                letter-spacing: -0.02em;
                background: linear-gradient(
                    135deg,
                    var(--accent) 0%,
                    var(--accent-glow) 100%
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 12px;
            }

            .subtitle {
                color: var(--text-secondary);
                font-size: 1rem;
                margin-bottom: 40px;
            }

            .form-group {
                margin-bottom: 24px;
                text-align: left;
            }

            label {
                display: block;
                color: var(--text-secondary);
                font-size: 0.85rem;
                font-weight: 600;
                margin-bottom: 8px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            input {
                width: 100%;
                padding: 16px 20px;
                background: rgba(0, 0, 0, 0.3);
                border: 1px solid var(--border);
                border-radius: 12px;
                color: var(--text);
                font-size: 1rem;
                transition: all 0.3s ease;
                font-family: inherit;
            }

            input:focus {
                outline: none;
                border-color: var(--accent);
                background: rgba(0, 220, 130, 0.05);
                box-shadow: 0 0 0 3px rgba(0, 220, 130, 0.1);
            }

            button {
                width: 100%;
                background: linear-gradient(
                    135deg,
                    var(--accent) 0%,
                    var(--accent-bright) 100%
                );
                color: var(--bg);
                border: none;
                padding: 18px 32px;
                border-radius: 12px;
                font-size: 1rem;
                font-weight: 700;
                cursor: pointer;
                transition: all 0.3s ease;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                box-shadow: 0 4px 15px rgba(0, 220, 130, 0.3);
            }

            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 25px rgba(0, 220, 130, 0.4);
            }

            button:active {
                transform: translateY(0);
            }

            .error {
                background: rgba(220, 38, 38, 0.1);
                color: #ff4444;
                padding: 16px;
                border-radius: 12px;
                margin-top: 20px;
                border: 1px solid rgba(220, 38, 38, 0.3);
                font-size: 0.9rem;
                display: none;
            }

            .security-note {
                margin-top: 32px;
                padding-top: 32px;
                border-top: 1px solid var(--border);
                color: var(--text-muted);
                font-size: 0.85rem;
                text-align: center;
            }

            @media (max-width: 480px) {
                .card {
                    padding: 32px 24px;
                }

                h1 {
                    font-size: 1.5rem;
                }
            }
        </style>
    </head>
    <body>
        <div class="gradient-bg"></div>

        <div class="container">
            <div class="card">
                <div class="logo">üöÄ</div>
                <h1>Dashboard Syst√®me Viral</h1>
                <p class="subtitle">Acc√®s s√©curis√©</p>

                <form id="loginForm">
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                            required
                            autofocus
                        />
                    </div>

                    <button type="submit">Connexion</button>

                    <div class="error" id="errorMessage">
                        ‚ùå Mot de passe incorrect
                    </div>
                </form>

                <div class="security-note">
                    üîí Acc√®s prot√©g√©
                </div>
            </div>
        </div>

        <script is:inline>
            const CORRECT_PASSWORD = "Syst√®meViral2024"; // √Ä CHANGER EN PRODUCTION !

            document.getElementById("loginForm").addEventListener("submit", (e) => {
                e.preventDefault();

                const password = document.getElementById("password").value;
                const errorDiv = document.getElementById("errorMessage");

                if (password === CORRECT_PASSWORD) {
                    // Stocker la session dans localStorage
                    sessionStorage.setItem("dashboard_authenticated", "true");
                    sessionStorage.setItem("dashboard_auth_time", Date.now().toString());

                    // Rediriger vers le dashboard
                    window.location.href = "/";
                } else {
                    errorDiv.style.display = "block";
                    setTimeout(() => {
                        errorDiv.style.display = "none";
                    }, 3000);
                }
            });

            // V√©rifier si d√©j√† connect√©
            if (sessionStorage.getItem("dashboard_authenticated") === "true") {
                window.location.href = "/";
            }

            // Auto-focus sur le champ password
            window.addEventListener("load", () => {
                document.getElementById("password").focus();
            });
        </script>
    </body>
</html>

